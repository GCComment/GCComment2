{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Build and serve GCComment",
            "request": "launch",
            "type": "node-terminal",
            "outputCapture": "std"
        },
        {
            "name": "Launch getReleaseNodes",
            "program": "${workspaceFolder}/greasemonkey/getReleaseNodes.js",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch patchVersion",
            "program": "${workspaceFolder}/greasemonkey/patchVersion.js",

            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "args": ["v1.2.3"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch copyDevScript",
            "program": "${workspaceFolder}/greasemonkey/copyDevScript.js",

            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "cwd": "${workspaceFolder}"
        }
    ]
}
